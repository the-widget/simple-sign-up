<div class='text-center'>
  <h1>Create Event</h1>
</div> <hr>
<% if @event.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@event.errors.count, "error") %>
      prohibited this event from being saved:
    </h4>
 
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if logged_in? %>
  <%= render 'new' %>
<% else %>
  <p>Please login to create Events</p>
<% end %>   