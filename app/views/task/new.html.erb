<div class="text-center"> 
  <h1>Add Task</h1>
</div> <hr>
<% if @task.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this event from being saved:
    </h4>
 
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @task, url: {action: "create", method: "post"} do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
  <%= f.label :description %> <br>
  <%= f.text_area :description %> <br>
  <div class="input-group bootstrap-timepicker timepicker">
      <%= f.label :start_time %> <br>
      <%= f.text_field :start_time, "class" => "input-small" %> <br>
      <%= f.label :end_time %> <br>
      <%= f.text_field :end_time, "class" => "input-small" %> <br>
      <script type="text/javascript">
        $('#task_start_time').timepicker({
          template: 'dropdown',
          defaultTime: false
        });
        $('#task_end_time').timepicker({
          template: 'dropdown',
          defaultTime: false
        });
      </script>
  </div> <br>
  <%= f.label :workers_required, "Workers/Volunteers Required" %> <br>
  <%= f.number_field :workers_required %> <br><br>
  <%= f.submit %>
<% end %>
