<div class="text-center"> 
  <h1>New Task</h1>
</div> <hr>

<%= form_for @task, url: {action: "create", method: "post"} do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
  <%= f.label :description %> <br>
  <%= f.text_area :description %> <br>
  <%= f.label :time %> <br>
  <%= f.text_field :time %> <br> <br>
  <%= f.submit %>
<% end %>