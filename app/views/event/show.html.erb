<div class='text-center'>
  <h2><%= @event.title %></h3>
  <% if organizer_permissions? %>
    <%= link_to("Edit Event", edit_event_path(@event)) %> |
    <%= link_to("Add Task", new_event_task_path(@event)) %> |
    <%= link_to("Delete Event", event_path(@event), :method => 'delete', data: {:confirm => "Are you sure you want to do delete this event?"}) %>
  <% end %>
</div><hr>

  <h4>Date: <%= @event.date %></h4>
  <h4>From: <%= @event.start_time %> to <%= @event.end_time %> </h4><hr>

  <p><%= @event.description %></p> <hr>
  <h4>Tasks:</h4>
  <% @event.tasks.each do |task| %>
    <p><%= link_to task.title, event_task_path(@event, task) %> - <%= task.workers_required - task.users.all.count %> position(s) remaining</p> 
  <% end %> <hr>

  <h4>Participants:</p>
  <% if @event.tasks %>
    <% @event.tasks.each do |task| %>
      <% task.users.each do |user| %>
        <li><p><%=user.email%></p></li>
      <% end %>
    <% end %>
  <% end %>
  <hr>
